#!/usr/bin/env sh

echo "🔍 Verificando conformidade do código..."

# Executa análise estática do Dart
dart analyze

if [ $? -eq 0 ]; then
  echo "✅ Código está em conformidade com o lint"
else
  echo "❌ Código não está em conformidade com o lint"
  echo "Execute 'dart fix --apply' para corrigir automaticamente ou corrija manualmente"
  exit 1
fi
